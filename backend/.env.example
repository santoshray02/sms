# Port Configuration (Consecutive ports: 10220-10230)
DB_PORT=10220
BACKEND_PORT=10221
FRONTEND_PORT=10222
NGINX_HTTP_PORT=10223
NGINX_HTTPS_PORT=10224

# Database
DATABASE_URL=postgresql+asyncpg://school_admin:school_password@localhost:10220/school_management
DB_USER=school_admin
DB_PASSWORD=school_password_change_in_production
DB_NAME=school_management

# JWT Authentication
JWT_SECRET=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# SMS Gateway (MSG91)
SMS_GATEWAY=msg91
SMS_API_KEY=your-msg91-api-key
SMS_SENDER_ID=SCHOOL
SMS_ROUTE=4

# CORS
CORS_ORIGINS=http://localhost:10222,http://localhost:10223

# Application
APP_NAME=School Management System
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Gunicorn Configuration (Production)
GUNICORN_WORKERS=4
GUNICORN_WORKER_CLASS=uvicorn.workers.UvicornWorker

# Scheduler
FEE_GENERATION_DAY=last
FEE_GENERATION_HOUR=9
REMINDER_DAYS_BEFORE_DUE=3
REMINDER_HOUR=10
